<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="company_cron_pms_token_form" model="ir.ui.view">
            <field name="name">company.cron.pms_token.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="PMS">
                        <group>
                            <group>
                                <field name="pms_user"/>
                                <field name="pms_host"/>
                            </group>
                            <group>
                                <field name="pms_pass"/>
                            </group>
                        </group>
                        <field name="pms_token"/>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>